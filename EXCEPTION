create table emp5(empno number primary key,ename varchar(20),deptno number);

insert into emp5 values(:empno,:ename,:deptno);

select * from emp5;

DECLARE
VENO EMP5.EMPNO%TYPE:=:empno;
VENAME EMP5.ENAME%TYPE;
VDEPTNO EMP5.DEPTNO%TYPE;
BEGIN
SELECT EMPNO,ENAME,DEPTNO INTO VENO,VENAME,VDEPTNO FROM EMP5 WHERE EMPNO=VENO; 
DBMS_OUTPUT.PUT_LINE('DEPTNO IS '||VDEPTNO);
DBMS_OUTPUT.PUT_LINE('ENAME IS '||VENAME);
EXCEPTION
WHEN NO_DATA_FOUND THEN
DBMS_OUTPUT.PUT_LINE('NO RECORD FOUND!');
END

DECLARE 
A NUMBER;
B NUMBER;
C NUMBER;
BEGIN
A:=:A;
B:=:B;
C:=A/B;
DBMS_OUTPUT.PUT_LINE('THE RESULT IS  '||C);
EXCEPTION
WHEN ZERO_DIVIDE THEN
DBMS_OUTPUT.PUT_LINE(' DIVISION BY ZERO IS NOT POSSIBLE');
END







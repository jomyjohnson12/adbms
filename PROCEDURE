CREATE TABLE ACCOUNT(ACNO NUMBER(5),NAME VARCHAR(20),BALANCE NUMBER(6));
INSERT INTO ACCOUNT VALUES(:ACNO,:NAME,:BALANCE);
SELECT * FROM ACCOUNT;

CREATE OR REPLACE PROCEDURE WITHDRAW(ACNO1 IN NUMBER,AMOUNT1 IN NUMBER) IS
BEGIN 
UPDATE ACCOUNT SET BALANCE=BALANCE-AMOUNT1 WHERE ACNO=ACNO1;
END;

CREATE OR REPLACE PROCEDURE DEPOSIT(ACNO1 IN NUMBER,AMOUNT1 IN NUMBER)IS
BEGIN
UPDATE ACCOUNT SET BALANCE=BALANCE+AMOUNT1 WHERE ACNO=ACNO1;
END;

DECLARE
CHOICE NUMBER;
ACNO1 NUMBER(5);
AMOUNT NUMBER(5);
BEGIN
ACNO1:=:ACNO1;
CHOICE:=:CHOICE;
AMOUNT:=:AMOUNT;
IF
CHOICE=1 THEN
DEPOSIT(ACNO1,AMOUNT);
ELSE
WITHDRAW(aCNO1,AMOUNT);
END IF;
END;
